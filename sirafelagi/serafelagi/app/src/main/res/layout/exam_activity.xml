<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCyanDarken"
    tools:context="com.abewkayew.serafelagi.ExamActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/linearTop"
        android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Remaining time for Exam to start"
        android:visibility="visible"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:id="@+id/timeRemaining"/>
    <TextView
        android:id="@+id/count_down_timer_exam_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/timeRemaining"
        android:textSize="60dp"
        android:layout_gravity="center"/>
    </LinearLayout>
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/arc_progress"
        android:background="@color/colorCyanDarkenModified"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/linearTop"
        app:arc_text_color="@color/colorWhite"
        app:arc_suffix_text="min"
        app:arc_bottom_text_size="20sp"
        android:visibility="gone"
        app:arc_unfinished_color="@android:color/holo_red_light"
        app:arc_finished_color="@color/colorWhite"/>
    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTop"
        app:wlv_borderWidth="3dp"
        app:wlv_borderColor="@color/colorCyanDarken"
        app:wlv_shapeType="rectangle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="east"
        android:visibility="visible"
        app:wlv_titleCenterStrokeColor="@color/apply_job_button"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_titleCenterColor="@color/colorWhite"
        app:wlv_titleCenterSize="24sp"

        app:wlv_titleTopStrokeColor="@color/apply_job_button"
        app:wlv_titleTopStrokeWidth="3dp"
        app:wlv_titleTopColor="@color/colorWhite"
        app:wlv_titleTopSize="24sp"

        app:wlv_titleBottomStrokeColor="@color/apply_job_button"
        app:wlv_titleBottomStrokeWidth="3dp"
        app:wlv_titleBottomColor="@color/colorWhite"
        app:wlv_titleBottomSize="24sp"

        app:wlv_waveAmplitude="10"
        app:wlv_waveColor="@color/colorCyanDarkenModified"/>

 </RelativeLayout>