<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout_shared"
    tools:context="com.abewkayew.serafelagi.CheckSharedAnimation">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageAnimated"
        android:src="@drawable/civil_one"
        android:transitionName="imageTransition"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/usernameshared"
        android:layout_width="wrap_content"
        android:transitionName="titleTransition"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@+id/imageAnimated"
        android:text="Sera Felagi"/>
    <TextView
        android:id="@+id/descriptionshared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/usernameshared"
        android:transitionName="descriptionTransition"
        android:text="@string/large_text"/>

</RelativeLayout>
