                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/teaching_image"
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/civil"
                                    />
                                <TextView
                                    android:id="@+id/teaching_first"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Teaching"
                                    android:layout_below="@+id/teaching_image"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:layout_marginTop="10dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:id="@+id/more_vertical_teaching"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_more_vert_black"
                                    android:layout_toRightOf="@+id/teaching_first"
                                    android:layout_below="@+id/teaching_image"
                                    android:layout_marginTop="18dp"
                                    android:layout_alignParentBottom="true"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="230dp"
                            android:background="@color/colorWhite"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/card_view_economics"
                            android:layout_gravity="center_horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/economics_image"
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/civil_two"
                                    />
                                <TextView
                                    android:id="@+id/economics_first"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Geology"
                                    android:layout_below="@+id/economics_image"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:layout_marginTop="10dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:id="@+id/more_vertical_economics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_more_vert_black"
                                    android:layout_toRightOf="@+id/economics_first"
                                    android:layout_below="@id/economics_image"
