                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="230dp"
                            android:background="@color/colorWhite"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/card_view_geology"
                            android:layout_gravity="center_horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/geology_image"
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/accounting_one"
                                    />
                                <TextView
                                    android:id="@+id/agri_first"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Geology"
                                    android:layout_below="@+id/geology_image"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:layout_marginTop="10dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:id="@+id/more_vertical_agri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_more_vert_black"
                                    android:layout_toRightOf="@+id/agri_first"
                                    android:layout_below="@id/geology_image"
                                    android:layout_marginTop="17dp"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <!--additional ending-->
                    <!--additional begining-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="230dp"
                            android:background="@color/colorWhite"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/card_view_teaching"
